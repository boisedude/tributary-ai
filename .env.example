# ============================================
# Tributary AI - Deployment Credentials Template
# ============================================
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and will not be committed
# ============================================

# Hostinger API Key (optional - for domain/DNS management)
# Get from: hPanel → Account → API
HOSTINGER_API_KEY=your_api_key_here

# ============================================
# SSH Credentials (PRIMARY deployment method)
# ============================================
# Enable SSH in hPanel: Websites → Dashboard → SSH Access
# Generate key: ssh-keygen -t rsa -b 4096 -f ~/.ssh/hostinger_rsa -N ""
# Add public key (~/.ssh/hostinger_rsa.pub) to hPanel SSH Access
SSH_USER=your_ssh_username
SSH_HOST=your_server_ip
SSH_PORT=65002
SSH_KEY_PATH=~/.ssh/hostinger_rsa
SSH_REMOTE_DIR=/home/username/domains/yourdomain.com/public_html

# ============================================
# FTP Credentials (BACKUP - only if SSH unavailable)
# ============================================
# FTP_HOST=ftp.yourdomain.com
# FTP_USER=your_ftp_username
# FTP_PASS=your_ftp_password

# ============================================
# Supabase (Quiz Data + CRM)
# ============================================
# Dashboard: https://supabase.com/dashboard/project/YOUR_PROJECT_REF
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_DB_PASSWORD=your_database_password_here
# Pooler connection (for migrations/direct queries)
# Format: postgresql://postgres.PROJECT_REF:PASSWORD@aws-1-us-west-1.pooler.supabase.com:5432/postgres
SUPABASE_DB_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-1-us-west-1.pooler.supabase.com:5432/postgres

# ============================================
# Admin Dashboard
# ============================================
# Password for accessing /admin dashboard
NEXT_PUBLIC_ADMIN_PASSWORD=your_admin_password_here

# ============================================
# Cal.com (optional - for booking integration)
# ============================================
CAL_API_KEY=your_cal_api_key_here
